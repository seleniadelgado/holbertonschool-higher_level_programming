#!/usr/bin/python3
class Square ():
    def __init__(self, size=0):
        self.__size = size
    def size(self):
        return self._size
    def size(self, value):
        if not isinstance(value, int):
            raise TypeError
            print("size must be an integer")
        elif size < 0:
            raise ValueError
            print("size must be >= 0")
        self._size = value
    def area (self):
        return (self.__size * self.__size)
